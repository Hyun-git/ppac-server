{
  "include": ["src/custom.d.ts", "src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"],
  "files": ["src/custom.d.ts"],
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true
  }
}
